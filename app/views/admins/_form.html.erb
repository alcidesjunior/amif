<%= form_for(:admin, :url=>@url) do |f| %>
<div class="row">
  <div class="col s6">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="col s6">
    <%= f.label :sobrenome %>
    <%= f.text_field :sobrenome %>
  </div>
</div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :modalidades_id %>
    <select name="admin[modalidades_id]">
      <%Modalidade.all.each do |m|%>
      <option value="<%=m.id%>" ><%=m.nome%></option>
      <%end%>
    </select>
  </div>

  <div class="field">
    <%= f.hidden_field :user_type, value: 0 %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn waves waves-effect"%>
  </div>
<% end %>
