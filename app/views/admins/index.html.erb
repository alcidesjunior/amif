<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Email</th>
      <th>Modalidades</th>
      <th>User type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.nome %></td>
        <td><%= admin.sobrenome %></td>
        <td><%= admin.email %></td>
        <td><%= Modalidade.find_by_id(admin.modalidades_id).nome %></td>
        <td><%= admin.user_type %></td>
        <td><a href="/admins/<%=admin.id%>/edit">Editar</a></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="fixed-action-btn vertical ">
  <a href="/admins/new" class="btn-floating btn-large waves-effect waves-light green right"><i class="material-icons">add</i></a>
</div>
