<p id="notice"><%= notice %></p>

<h1>Atleta</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Data nascimento</th>
      <th>Sexo</th>
      <th>Email</th>
      <th>Nacionalidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atleta.each do |atletum| %>
      <tr>
        <td><%= atletum.nome %></td>
        <td><%= atletum.sobrenome %></td>
        <td><%= atletum.data_nascimento %></td>
        <td><%= atletum.sexo %></td>
        <td><%= atletum.email %></td>
        <td><%= atletum.nacionalidade %></td>
        <td><%= link_to 'Show', atletum %></td>
        <td><%= link_to 'Edit', edit_atletum_path(atletum) %></td>
        <td><%= link_to 'Destroy', atletum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

