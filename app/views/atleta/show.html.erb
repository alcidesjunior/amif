<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col s12 m4">
    <div class="card amber lighten-3">
      <div class="card-content black-text">
        <span class="card-title"><b>Ficha do atleta</b></span>
        <p>
          <strong>Nome:</strong>
          <%= @atletum.nome %>
        </p>

        <p>
          <strong>Sobrenome:</strong>
          <%= @atletum.sobrenome %>
        </p>

        <p>
          <strong>Data nascimento:</strong>
          <%= @atletum.data_nascimento.strftime("%d/%m/%Y") %>
        </p>

        <p>
          <strong>Sexo:</strong>
          <%= @atletum.sexo %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @atletum.email %>
        </p>

        <p>
          <strong>Nacionalidade:</strong>
          <%= @atletum.nacionalidade %>
        </p>

        <p>
          <strong>Professor:</strong>
          <%= Professor.find_by_id(@atletum.professors_id).nome if Professor.find_by_id(@atletum.professors_id) != nil %>
        </p>
        <p>
          <strong>Modalidade:</strong>
          <%=Modalidade.find_by_id(@atletum.modalidades_id).nome if Modalidade.find_by_id(@atletum.modalidades_id) != nil%>
        </p>
      </div>
      <div class="card-action">
        <%= link_to 'Voltar', atleta_path, class:"blue-text" %> |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to 'Editar', edit_atletum_path(@atletum), class:"green-text" %>
      </div>
    </div>
  </div>
</div>
