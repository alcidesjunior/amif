<div class="container login">
<div class="row">
  <div class="col s12 m6 animated tadax" style="border: 1px solid black">
    <picture><img src="/assets/images/logo.jpg" alt="" class="logo-login"></picture>
  </div>
  <div class="col s12 m5" style="border: 1px solid black">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col s12 m12">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12">
          <button type="submit" name="button" class="btn waves-effect waves-light">
            Acessar <i class="material-icons left">lock</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
