<div class="container">
<div class="row">
  <div class="col s5">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col s12 m12 l12">

          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m12 l12">

          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m12 l12">
          <button type="submit" name="button" class="btn waves-effect waves-light">
            Acessar <i class="material-icons left">lock</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s7 m7 l7 animated tada">
    <picture><img src="/assets/images/logo.jpg" alt="" class="logo"></picture>
  </div>
</div>
</div>
