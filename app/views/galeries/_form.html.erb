<%= form_for(galery) do |f| %>
  <% if galery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(galery.errors.count, "error") %> prohibited this galery from being saved:</h2>
    </div>
  <% end %>
  <div class="row">
    <div class="col s3">
      <div class="file-field input-field">
          <div class="btn blue">
            <!-- <span>Anexar imagem</span> -->
            <i class="material-icons">camera_enhance</i>
            <%= f.file_field :imagem , required: "true"%>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
      </div>
    </div>
    <div class="col s4">
      <div class="actions">
        <%= f.submit "Enviar", class: "btn teal btn-large"%>
      </div>
    </div>
  </div>
<% end %>
